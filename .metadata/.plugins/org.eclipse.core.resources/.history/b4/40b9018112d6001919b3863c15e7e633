package app;

import java.util.Scanner;

public class Rechner {
	int zahl1;
	int zahl2;
	char operator;
	
	public void input() {
		for (boolean i = 0; i < ; i++) {
			Scanner scanner = new Scanner(System.in);
			
			System.out.println("Zahl1: ");
			zahl1 = scanner.nextInt();
			
			System.out.println("Zahl2: ");
			zahl2 = scanner.nextInt();
			
			System.out.println("ein Operator: ");
			operator = scanner.next().charAt(0);
			
			scanner.close();
		}
	}
	
	public void output() {
		System.out.printf("Name: %s, Alter: %d, Zeichen: %s     ", zahl1, zahl2, operator);
	}
	
	
	public static double rechner(int  zahl1, int zahl2, char operator) {
		double result = Double.NaN;
		
		switch (operator) {
		case '+':
			result = a+b;
			break;
		case '-':
			result = a-b;
			break;
		case '*':
			result = a*b;
			break;
		case '/':
			if (b == 0) {
				return Double.NEGATIVE_INFINITY;
			}else {
				result = a/b;
			}
			break;
		default:
			System.out.println("Kein gultig Operator");
		}
		return result;
	}
	
