package app;

public class Methoden {
	// soll die grossere von zwei Zahlen zuruck geben
	public static int max(int a, int b) {
		if (a == b) {
			System.out.println("Zahlen sind gleich");
		}
		return a>b?a:b;
	}
	
	// soll die großte von drei Zahlen zuruck geben
	public static int max(int a, int b, int c) {
		if (a == b && a == c && b == c) {
			System.out.println("Zahlen sind gleich");
		}
		if (a > b && a > c) {
			return a;
		} else if (b > a && b > c){
			return b;
		}
		return c;
	}
	
	// soll die großte Zahl eines Arrays zuruck geben
	public static int max(int[] arr) {
		int max = 0;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i]>max) {
				max = arr[i];
			}
		}
		return max;
	}
	
	// soll nur gerade Zahlen ausgeben
	public static void printGerade(int[] arr) {
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] %2 == 0) {
				System.out.println(arr[i]);
			}
		}
	}
	
	/**
	 *Zusatz
	 *soll ein zweidimensionales Array in dieser Form ausgeben
	 * 1 2 3 2
	 * 3 5 5 6
	 * 2 4 6 7
	 * 
	 */
	
	public static void print2d(int[][] arr2d) {}

	
	public static void main(String[] args) {
		int[] array = {1,10};
		int[][] arr2d = 	{
				{3,4},
				{7,5},
				{7,5}
			};
//		print2D(arr2d);
		
		
		System.out.println(max(3,4));
		System.out.println(max(4,4,5));
		System.out.println(max(array));
		printGerade(array);
	}

}
