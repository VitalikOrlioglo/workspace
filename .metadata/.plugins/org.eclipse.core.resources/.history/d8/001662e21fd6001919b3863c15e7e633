//			result = false;
//			break;
//		}
//		return result;
//	}
	
	public static boolean isValidOperator(char operator) {
//		if (operator == '+'|| operator == '-' || operator == '*'|| operator == '/') {
//			return true;
//		}
//		return false;
		return operator == '+'|| operator == '-' || operator == '*'|| operator == '/';
	}
	
	
}
