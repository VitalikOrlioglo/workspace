package app;

public class Kunde {
	private String name;
	private int id;
	private char kategorie;
	private boolean neuKunde;
	// Frage: hier kein Objekt erzeugt, sondern nur ein Variable adr, der hat Datentype "Adresse" 
	// und wir brauchen hier kein Objekt erzeugen, nur in Main?
	private Adresse adr;
	
	public Kunde() {}
	
	public Kunde(String name, int id) {
		this.name = name;
		this.id = id;
	}

	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public char getKategorie() {
		return kategorie;
	}
	public void setKategorie(char kategorie) {
		this.kategorie = kategorie;
	}
	public boolean isNeuKunde() {
		return neuKunde;
	}
	public void setNeuKunde(boolean neuKunde) {
		this.neuKunde = neuKunde;
	}

	public Adresse getAdr() {
		return adr;
	}

	public void setAdr(Adresse adr) {
		// hier adr ist auch nicht objekt, sondern nur ein variable, der hat Datentype "Adresse"
		this.adr = adr;
	}
	
	
}
